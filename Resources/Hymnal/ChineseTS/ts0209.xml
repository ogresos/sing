  <title>生命樹</title>
  <index>true</index>
  <category>享受基督</category>
  <numbers><cebuano num="1143"/><chinese num="ts:209"/><english num="1143"/><german num="1143"/><portuguese num="247"/><russian num="420"/><spanish num="225"/></numbers>
