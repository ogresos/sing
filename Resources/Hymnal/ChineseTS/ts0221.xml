<hymn xmlns="http://www.hymnal.net/hymn">
  <title>暢飲於活泉</title>
  <index>true</index>
  <category>享受基督</category>
  <numbers><cebuano num="1149"/><chinese num="ts:221"/><english num="1149"/><german num="1149"/><korean num="822"/><russian num="464"/><spanish num="229"/></numbers>
