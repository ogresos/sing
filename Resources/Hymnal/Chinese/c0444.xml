<hymn xmlns="http://www.hymnal.net/hymn">
  <title>是愛的神作我牧人</title>
  <index>true</index>
  <category>經歷神－作牧人</category>
  <numbers><chinese num="444"/><english num="8444"/><korean num="444"/><portuguese num="312"/></numbers>
  <creators>
    <author biodate="1821-1877" biolink="">Translated from Henry Williams Baker</author>
  </creators>
