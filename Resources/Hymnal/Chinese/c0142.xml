<hymn xmlns="http://www.hymnal.net/hymn">
  <title>涼爽你像柔和微風</title>
  <index>true</index>
  <category>讚美主－祂的美麗</category>
  <numbers><cebuano num="172"/><chinese num="142"/><english num="172"/><german num="172"/><korean num="142"/><portuguese num="84"/><russian num="204"/><spanish num="82"/><tagalog num="172"/></numbers>
  <creators>
	<author biodate="1850-1906" biolink="">Translated from William Spencer Walton</author>
  </creators>
