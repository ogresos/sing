<hymn xmlns="http://www.hymnal.net/hymn">
  <title>哦主這是何等神蹟</title>
  <index>true</index>
  <category>讚美主－對祂的記念</category>
  <numbers><cebuano num="233"/><chinese num="177"/><english num="233"/><german num="233"/><korean num="177"/><portuguese num="126"/><russian num="47"/><spanish num="103"/><tagalog num="233"/></numbers>
