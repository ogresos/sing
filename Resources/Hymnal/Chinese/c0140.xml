<hymn xmlns="http://www.hymnal.net/hymn">
  <title>主你是那可愛新郎</title>
  <index>true</index>
  <category>讚美主－祂的美麗</category>
  <numbers><cebuano num="170"/><chinese num="140"/><english num="170"/><german num="170"/><korean num="140"/><portuguese num="83"/><russian num="34"/><spanish num="80"/><tagalog num="170"/></numbers>
