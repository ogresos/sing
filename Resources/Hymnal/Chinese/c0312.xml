<hymn xmlns="http://www.hymnal.net/hymn">
  <title>恩主你是我的安息</title>
  <index>true</index>
  <category>羨慕－脫離己</category>
  <numbers><chinese num="312*"/><english num="414*"/><korean num="312"/></numbers>
