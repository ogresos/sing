<hymn xmlns="http://www.hymnal.net/hymn">
  <title>聽阿罪人慈聲何高</title>
  <index>true</index>
  <category>福音－呼求</category>
  <numbers><cebuano num="1054"/><chinese num="730"/><english num="1054"/><korean num="730"/><tagalog num="1054"/></numbers>
