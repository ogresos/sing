<hymn xmlns="http://www.hymnal.net/hymn">
  <title>主阿發言主阿吹氣</title>
  <index>true</index>
  <category>召會－建造</category>
  <numbers><chinese num="607"/><english num="844"/><korean num="607"/><tagalog num="844"/></numbers>
