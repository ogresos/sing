<hymn xmlns="http://www.hymnal.net/hymn">
  <title>祂是樂中之樂</title>
  <index>true</index>
  <category>經歷基督－作一切</category>
  <numbers><chinese num="393"/><english num="8393"/><portuguese num="261"/><spanish num="234"/></numbers>
  <creators>
	<author biodate="1903-1972" biolink="">Translated from Watchman Nee</author>
  </creators>
