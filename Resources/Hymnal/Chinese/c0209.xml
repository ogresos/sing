<hymn xmlns="http://www.hymnal.net/hymn">
  <title>耶穌你的全勝的愛</title>
  <index>true</index>
  <category>聖靈的豐滿－火</category>
  <numbers><cebuano num="264"/><chinese num="209"/><english num="264"/><french num="44"/><german num="264"/><korean num="209"/><portuguese num="137"/><russian num="51"/><tagalog num="264"/></numbers>
