<hymn xmlns="http://www.hymnal.net/hymn">
  <title>靈要操練運用</title>
  <index>true</index>
  <category>聚會－運用靈</category>
  <numbers><cebuano num="866"/><chinese num="628"/><english num="866"/><french num="165"/><german num="866"/><korean num="628"/><portuguese num="406"/><russian num="384"/><spanish num="392"/><tagalog num="866"/></numbers>
