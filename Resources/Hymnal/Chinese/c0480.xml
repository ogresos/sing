<hymn xmlns="http://www.hymnal.net/hymn">
  <title>你們能否順從</title>
  <index>true</index>
  <category>鼓勵－順從主</category>
  <numbers><cebuano num="657"/><chinese num="480"/><english num="657"/><korean num="480"/><tagalog num="657"/></numbers>
