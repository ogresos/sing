<hymn xmlns="http://www.hymnal.net/hymn">
  <title>哦這血泉何妙</title>
  <index>true</index>
  <category>福音－寶血</category>
  <numbers><cebuano num="1008"/><chinese num="684"/><english num="1008"/><german num="1008"/><korean num="684"/><portuguese num="448"/><russian num="167"/><spanish num="471"/></numbers>
