<hymn xmlns="http://www.hymnal.net/hymn">
  <title>主當我們藉著這水</title>
  <index>true</index>
  <category>受浸－埋葬與復活</category>
  <numbers><cebuano num="937"/><chinese num="742"/><english num="937"/><german num="937"/><korean num="742"/><russian num="433"/><spanish num="424"/><tagalog num="937"/></numbers>
