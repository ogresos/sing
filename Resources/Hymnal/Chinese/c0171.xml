<hymn xmlns="http://www.hymnal.net/hymn">
  <title>耶穌只要一想到你</title>
  <index>true</index>
  <category>讚美主－對祂的滿足</category>
  <numbers><cebuano num="209"/><chinese num="171"/><english num="209"/><german num="209"/><korean num="171"/><portuguese num="110"/><russian num="40"/><tagalog num="209"/></numbers>
  <creators>
	<author biodate="1090-1153" biolink="en.wikipedia.org/wiki/Bernard_of_Clairvaux">Translated from Bernard of Clairvaux</author>
	<author biodate="1814-1878" biolink="">Translated by Edward Caswall</author>
  </creators>
