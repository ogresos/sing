<hymn xmlns="http://www.hymnal.net/hymn">
  <title>不是我們隨意走</title>
  <index>true</index>
  <category>事奉－隨主引領</category>
  <numbers><cebuano num="907"/><chinese num="650"/><english num="907"/><german num="907"/><korean num="650"/><tagalog num="907"/></numbers>
