<hymn xmlns="http://www.hymnal.net/hymn">
  <title>但願榮耀歸於聖父</title>
  <index>true</index>
  <category>頌讚三一神－祂的計畫</category>
  <numbers><cebuano num="1"/><chinese num="1"/><english num="1"/><german num="1"/><korean num="1"/><russian num="191"/><spanish num="1"/><tagalog num="1"/></numbers>
