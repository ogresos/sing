<hymn xmlns="http://www.hymnal.net/hymn">
  <title>跟主行走心中甜美</title>
  <index>true</index>
  <category>經歷基督－跟隨祂</category>
  <numbers><cebuano num="587"/><chinese num="428"/><english num="587"/><korean num="428"/><portuguese num="294"/><russian num="524"/><tagalog num="587"/></numbers>
  <creators>
	<author biodate="1843-1919" biolink="">Translated from Albert Benjamin Simpson</author>
  </creators>
