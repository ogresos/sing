<hymn xmlns="http://www.hymnal.net/hymn">
  <title>住在你裏面這是我</title>
  <index>true</index>
  <category>經歷基督－住在祂裡面</category>
  <numbers><chinese num="420"/><english num="563"/><french num="104"/><korean num="420"/><portuguese num="289"/><spanish num="263"/><tagalog num="563"/></numbers>
