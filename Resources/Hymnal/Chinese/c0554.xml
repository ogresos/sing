<hymn xmlns="http://www.hymnal.net/hymn">
  <title>求主教我如何禱告</title>
  <index>true</index>
  <category>禱告－教導</category>
  <numbers><cebuano num="767"/><chinese num="554"/><english num="767"/><french num="139"/><german num="767"/><korean num="554"/><portuguese num="352"/><russian num="282"/><tagalog num="767"/></numbers>
