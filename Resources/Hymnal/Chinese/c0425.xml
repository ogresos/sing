<hymn xmlns="http://www.hymnal.net/hymn">
  <title>我是受造的瓦器</title>
  <index>true</index>
  <category>經歷基督－盛著祂</category>
  <numbers><cebuano num="548"/><chinese num="425"/><dutch num="62"/><english num="548"/><german num="548"/><korean num="425"/><portuguese num="277"/><russian num="271"/><spanish num="256"/><tagalog num="548"/></numbers>
