<hymn xmlns="http://www.hymnal.net/hymn">
  <title>主阿我愛你的居所</title>
  <index>true</index>
  <category>召會－吸引</category>
  <numbers><cebuano num="852"/><chinese num="616*"/><dutch num="34"/><english num="852*"/><french num="151"/><german num="852"/><korean num="616"/><portuguese num="389"/><russian num="135"/><spanish num="365"/><tagalog num="852"/></numbers>
