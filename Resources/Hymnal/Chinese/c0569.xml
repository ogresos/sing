<hymn xmlns="http://www.hymnal.net/hymn">
  <title>禱告與主同勞苦</title>
  <index>true</index>
  <category>禱告－與主同勞</category>
  <numbers><cebuano num="786"/><chinese num="569"/><english num="786"/><german num="786"/><korean num="569"/><russian num="286"/><spanish num="337"/><tagalog num="786"/></numbers>
