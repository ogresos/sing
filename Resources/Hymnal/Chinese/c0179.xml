<?xml version="1.0" encoding="utf-8"?>
<hymn xmlns="http://www.hymnal.net/hymn">
  <title>當我注視你這桌子</title>
  <index>true</index>
  <category>讚美主－對祂的記念</category>
  <numbers><cebuano num="220"/><chinese num="179"/><english num="220"/><french num="35"/><german num="220"/><korean num="179"/><portuguese num="117"/><russian num="41"/><spanish num="96"/><tagalog num="220"/></numbers>
