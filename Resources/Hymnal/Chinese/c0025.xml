<?xml version="1.0" encoding="utf-8"?>
<hymn xmlns="http://www.hymnal.net/hymn">
  <title>父阿你賜何等慈愛</title>
  <index>true</index>
  <category>敬拜父－祂的愛</category>
  <numbers><cebuano num="30"/><chinese num="25"/><dutch num="26"/><english num="30"/><french num="5"/><german num="30"/><korean num="25"/><portuguese num="12"/><russian num="13"/><spanish num="21"/><tagalog num="30"/></numbers>
