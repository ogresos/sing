  <title>Na luz quero viver</title>
  <index>true</index>
  <category>Para Comunhão Com O Senhor</category>
  <numbers><chinese num="476"/><english num="8476"/><french num="129"/><portuguese num="329"/><russian num="220"/><spanish num="300"/><tagalog num="1353"/></numbers>
